.chat-main__messages__box{data: {message: {id: message.id}}}  
  .chat-main__messages__box__info
    .chat-main__messages__box__info__user
      = message.user.name
    .chat-main__messages__box__info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__messages__box__text
    - if message.body.present?
      %p.lower-message__body
        = message.body
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?

