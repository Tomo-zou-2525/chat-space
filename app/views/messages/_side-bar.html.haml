.side-bar
  .side-bar__header
    .side-bar__header__box
      .side-bar__header__box__user
        = current_user.name
      .side-bar__header__box__menu
        .side-bar__header__box__menu__new-group
        = link_to new_group_path, class: "contents__btn" do
          = icon("fas", "edit", class: "contents__btn--icon")
          %span<>
        .side-bar__header__box__menu__edit-user
        = link_to edit_user_path(current_user), class: "contents__btn" do
          = icon("fas", "cog", class: "contents__btn--icon")
          %span<>
  .side-bar__groups
    - current_user.groups.each do |group|
      .side-bar__groups__group
        .side-bar__groups__group__name
          = link_to group_messages_path(group), class: "group__btn" do
            = group.name #group_messages_pathに引数は何？
        .side-bar__groups__group__message
          = group.show_last_message
